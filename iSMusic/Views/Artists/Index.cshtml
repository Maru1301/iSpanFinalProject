@using iSMusic.Controllers
@model IEnumerable<iSMusic.Models.EFModels.Artist>

@{
    ViewBag.Title = "Index";

    var pagedInfo = (ArtistsController.PaginationInfo_110)ViewBag.Pagination;
    var criteria = (ArtistsController.Criteria)ViewBag.Criteria;
    var isBandList = (IEnumerable<SelectListItem>)ViewBag.IsBandList;
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<form method="get">
    <div class="row">
        <div class="col-xs-12">
            <div class="caption">
                <h3>Search</h3>
                <div class="row">
                    <div class="col-md-4">分類:@Html.DropDownList("isBand", isBandList, new { @class = "form-control" })</div>
                    <div class="col-md-4">表演者名稱:<input type="text" name="PerformerName" class="form-control" value="@criteria.PerformerName"></div>
                </div>
            </div>
        </div>
    </div>
    <div class="row" style="margin-top: 10px; margin-bottom: 20px; padding-left: 15px;">
        <input type="submit" class="btn btn-primary" value="Search" />
    </div>
</form>

<table class="table">
    <tr>
        <th>
        </th>
        <th>
            @Html.DisplayNameFor(model => model.artistName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.artistGender)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @if (item.isBand == true)
                {
                    <span>樂團</span>
                }
                else
                {
                    <span>單人</span>
                }
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.artistName)
            </td>

            <td>
                @if (item.artistGender == true)
                {
                    <span>男</span>
                }
                else if (item.artistGender == false)
                {
                    <span>女</span>
                }
                else
                {
                }
            </td>

            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.id })
            </td>
        </tr>
    }

</table>
@pagedInfo.RenderPager(page => "/Artists/Index?" + criteria.GetQueryString() + "&PageNumber=" + page)

@section Scripts
{
    <script>
        $(document).ready(function () {
        @if (criteria.isBand.HasValue)
            {
                @:$("#isBand").val("@criteria.isBand")
            }
        })
    </script>    
}
