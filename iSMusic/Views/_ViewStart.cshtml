@{
    string CurrentName = Convert.ToString(HttpContext.Current.Request.RequestContext.RouteData.Values["Controller"]);

    if (CurrentName == "Songs" || CurrentName == "Artists" || CurrentName == "SongGenres" || CurrentName == "Albums" || CurrentName == "Creators")
    {
        Layout = "~/Views/Shared/_SongLayout.cshtml";
    }
    else if (CurrentName == "Products" || CurrentName == "Orders" || CurrentName == "Coupons")
    {
        Layout = "~/Views/Shared/_ProductLayout.cshtml";
    }
    else if (CurrentName == "Activities")
    {
        Layout = "/Views/Shared/_ActivityLayout.cshtml";
    }
    else if (CurrentName == "Admins")
    {
        Layout = "/Views/Shared/_AdminLayout.cshtml";
    }else if (CurrentName == "Members")
    {
        Layout = "/Views/Shared/_MemberLayout.cshtml";
    }else
    {
        Layout = "/Views/Shared/_Layout.cshtml";
    }
}
