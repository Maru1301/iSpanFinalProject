<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/Scripts/jquery-3.6.0.min.js"></script>
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top nav-bgc">
        <div class="container-fluid margin-left">
            <a class="navbar-brand fs-3 fst-italic theme-color fw-bolder" href="~/Home/Index"><span class="brand">isMusic</span></a>
            <button class="navbar-toggler white" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor02" aria-controls="navbarColor02" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon white"></span>
            </button>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-right mr-auto">
                    <li class="nav-item"><a href="/Songs/Index" id="registerLink" class="nav-link fs-4 ms-2 text-light">音樂</a></li>
                    <li class="nav-item"><a href="/Albums/Index" id="registerLink" class="nav-link fs-4 ms-2 text-light">專輯</a></li>
                    <li class="nav-item"><a href="/Artists/Index" id="registerLink" class="nav-link fs-4 ms-2 text-light">演出者</a></li>
                    @*<li class="nav-item"><a href="/Creators/Index" id="registerLink" class="nav-link fs-4 ms-2 text-light visually-hidden">創作者</a></li>*@
                    <li class="nav-item"><a href="/SongGenres/Index" id="registerLink" class="nav-link fs-4 ms-2 text-light">音樂種類</a></li>
                    <li class="nav-item"><a href="/Home/Index" id="registerLink" class="nav-link fs-4 ms-2 text-light">首頁</a></li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content mt-120px">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - 我的 ASP.NET 應用程式</p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
