<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/Scripts/jquery-3.6.0.min.js"></script>
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top nav-bgc">
        <div class="container-fluid margin-left">
            <a class="navbar-brand fs-3 fst-italic theme-color fw-bolder" href="~/Home/Index"><span class="brand">isMusic</span></a>
            <button class="navbar-toggler white" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor02" aria-controls="navbarColor02" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon white"></span>
            </button>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-right mr-auto">
                    <li class="nav-item"><a href="/Products/Index" id="registerLink" class="nav-link fs-4 ms-2 text-light">商品</a></li>
                    <li class="nav-item"><a href="/Orders/Index" id="registerLink" class="nav-link fs-4 ms-2 text-light">訂單</a></li>
                    <li class="nav-item"><a href="/Coupons/Index" id="registerLink" class="nav-link fs-4 ms-2 text-light">優惠券</a></li>
                    <li class="nav-item"><a href="/Home/Index" id="registerLink" class="nav-link fs-4 ms-2 text-light">首頁</a></li>
                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content mt-120px">
        @RenderBody()

    </div>
    <footer>
        <div class="d-flex justify-content-between align-content-end">
            <div class="fst-italic h1 text-light m-3">@DateTime.Now.Year</div>
            <div class="text-light h2 fst-italic m-3"> I♪PAN 4 </div>
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @*@Scripts.Render("~/bundles/bootstrap")*@
    <script src="~/Scripts/bootstrap.bundle.min.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
