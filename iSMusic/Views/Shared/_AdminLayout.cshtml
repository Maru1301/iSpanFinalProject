<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head> 
<body>
    <header class="mb-5">
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top nav-bgc">
            <div class="container-fluid margin-left">
                <a class="navbar-brand fs-3 fst-italic theme-color fw-bolder btn-outline-light" href="~/Home/Index"><span class="brand">isMusic</span></a>
                <button class="navbar-toggler white" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor02" aria-controls="navbarColor02" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon white"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarColor02">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link fs-4 ms-2 text-light" href="~/Admins/Index">
                                權限
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link fs-4 ms-2 text-light" href="~/Home/Index">
                                首頁
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container body-content mt-120px">
        @RenderBody()

    </div>
    <footer>
        <div class="d-flex justify-content-between align-content-end">
            <div class="fst-italic h1 text-light m-3">@DateTime.Now.Year</div>
            <div class="text-light h2 fst-italic m-3"> I♪PAN 4 </div>
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @*<script src="~/Scripts/bootstrap.bundle.min.js"></script>*@
    @RenderSection("scripts", required: false)
</body>
</html>
